@model UrunModel

@{
    ViewData["Title"] = "Yeni Ürün";
}

<h1>@ViewData["Title"]</h1>

<partial name ="_CreateEdit" model="Model"/> @*TagHelper*@
@*@Html.Partial("_CreateEdit",Model) yanlış kullanım *@
@*@await Html.PartialAsync("_CreateEdit",Model) doğru kullanımı (HtmlHelper)*@ 


@*wwwroot - plugins-bootstrap-datepicker takvim kütüphanesini yükledik *@
@section Scripts
{	
	
<partial name="_ValidationScriptsPartial" />

<link href="/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
<script src="/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
<script src="/plugins/bootstrap-datepicker/locales/bootstrap-datepicker.tr.min.js"></script>


<script>
	$(function(){
	$('#tarih').datepicker({
    todayBtn: "linked",
    clearBtn: true,
    language: "tr",
    orientation: "top auto",
    autoclose: true,
    todayHighlight: true
	});
});
</script>
}